extends base.pug

block scripts
  script(src='/static/script.js')

block style 
   style
     include ../static/style.css
     include ../static/contact.css
block content 
    h1 Contact us 
    form(action="/contact", method="post",class="myform") 
        input(type="text", class="myinput",name="name",placeholder="Enter your name")
        input(type="phone", class="myinput",name="phone",placeholder="Enter your phone")
        input(type="email", class="myinput",name="email",placeholder="Enter your e-mail")
        input(type="address", class="myinput",name="address",placeholder="Enter your address")
        textarea(name="desc", cols="30", rows="10",class="myinput", placeholder="Enter your concern") 
        button.btn 
            | Submit 